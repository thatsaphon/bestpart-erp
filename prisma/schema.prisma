// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int     @id @default(autoincrement())
  username   String  @unique
  first_name String?
  last_name  String?
  role       Role
  password   String
  flag       Json
}

enum Role {
  USER
  ADMIN
}
